extends layout

block append head

block content
    .container
        .row
            .col-md-4.col-md-offset-4
                .alert-box
                    #alert.alert.alert-info.alert-dismissible(role="alert")
                        span#alert-text &nbsp;
        .row
            .col-md-4.col-md-offset-4
                form.form-signin(method="post", action="/login")
                    h2.text-center.form-signin-heading Please sign in
                    label.sr-only(for="login") Username
                    input#login.form-control(type="text", name="login", placeholder="Username", required, autofocus)
                    label.sr-only(for="password") Password
                    input#password.form-control(type="password", name="password",placeholder="Password", required)
                    //- input#remember(type="checkbox", name="remember")
                    //- label(for="remember") Remember me
                    button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
block append customScripts